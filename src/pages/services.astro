---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Title from '../components/Title.astro';
import ServicesComponent from '../components/Services.astro';
import ParallaxImage from '../components/ParallaxImage.astro';
import zen from '../assets/images/zen.jpg';
import SiteData from "../constants/siteData.json";

---


<Layout 
seo={{
		title: SiteData.pages.services.title,
		description: SiteData.default.description
	}}
>
	<Header textColor="black" headerClasses="" menuColor="#000000"/>
	<main>
			<Title title="Services" />
			<ParallaxImage
					src={zen.src}
					alt="Services"
					class="w-100 h-[46vw] object-cover"
				/>
			<ServicesComponent size={58} strokeWidth={0.5} customClasses='text-boulder-500' subtitle="01"/>
	</main>
  <Footer />
</Layout>


